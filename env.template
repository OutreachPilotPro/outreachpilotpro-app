# OutreachPilotPro Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-production-key-here-make-it-long-and-random

# Database Configuration
DATABASE_URL=sqlite:///outreachpilot.db

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Production Settings (set these in production)
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=your-production-secret-key-here
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key

# Optional: Custom SMTP Settings
# MAIL_SERVER=smtp.your-provider.com
# MAIL_PORT=465
# MAIL_USE_SSL=true
